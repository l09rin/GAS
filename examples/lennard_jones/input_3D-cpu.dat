DIMENSION 3				# 2, 3 (default)
DEVICE CPU
PARTICLE_CLASS particle_3D		# options : particle_3D (default) , particle_2D
ENSEMBLE NVE

SIGMA 1								# length unit (not used)
EPSILON 1							# energy unit (not used)
PARTICLE_MASS 1
SIDE 20.	      						# In units of SIGMA
     # SIDES 10. 10. 10.
KbT 3.0								# in units of EPSILON, not used

     # INITIAL_CONFIGURATION file <xyz|sph|lmp> <file_name> <energy_per_particle(EPSILON)>
     # INITIAL_CONFIGURATION (random,fcc,bcc) <number_of_particles> <energy_per_particle(EPSILON)>
INITIAL_CONFIGURATION random 2400 3.673

#  <cutoff(SIGMA)> <shift(EPSILON)|auto> <verlet_rad_delta(SIGMA)>
LENNARD_JONES 4.0 auto 0.3

INTEGRATION_TIME_STEP 0.01	  				#    in units of SIGMA*sqrt(PARTICLE_MASS/EPSILON)
EQUILIBRATION_STEPS 2000
PRODUCTION_STEPS 2000
SAVING_INTERVALS 1 1 20000					# global_quantities configurations backup_positions&velocities
								#    set to 0 last digit if no backups wanted

# 1=YES , 0=NO ; first number refers to the equilibration run, second one to the production stage.
# SAVE_ATTRIBUTE <particles|part_img|forces_splitted|velocities|mols_com|mols_com_img|mols_forces_splitted|mols_velocities|energy|virial> <0|1> <0|1>
 SAVE_FORMAT xyz
 SAVE_ATTRIBUTE particles 1 1
 SAVE_ATTRIBUTE forces 1 1
 SAVE_ATTRIBUTE velocities 1 1
 SAVE_POTENTIAL_ENERGY 1 1
 SAVE_PARTIAL_POTENTIAL_ENERGIES 1 1
 SAVE_KINETIC_ENERGY 0 0
 SAVE_TEMPERATURE 1 0
     # SAVE_MSD 0 1 <format:all|mols_cm> {<steps_file_name>}	# all = for all particles , mols_cm = for centers of mass of all molecules
 SAVE_MSD 0 0 all
 SAVE_VIRIAL_PRESSURE 1 1

# INITIAL_VELOCITIES_BY_FILE 0 velocities.dat				# if = 1 it loads the velocities by this specified file
SAVING_DIRECTORY_NAME LJresults
